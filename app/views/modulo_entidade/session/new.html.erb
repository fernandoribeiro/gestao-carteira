<%= form_tag [:entidade, :session, :index], class: "form-horizontal" do %>
  <div class="control-group <%= error_class_for @user, :username %>">
    <%= label_tag :username, "Login/E-mail", class: "control-label" %>
    <div class="controls">
      <%= text_field_tag :username, params[:username] %>
      <%= error_info_for @user, :username %>
    </div>
  </div>
  <div class="control-group <%= error_class_for @user, :password %>">
    <%= label_tag :password, "Senha", class: "control-label" %>
    <div class="controls">
      <%= password_field_tag :password, nil %>
      <%= error_info_for @user, :password %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag "Entrar", class: "btn btn-primary", data: { disable_with: "Autenticando..." } %>
  </div>
<% end %>
