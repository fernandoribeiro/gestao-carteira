
<%= form_for [:entidade, :administracao, @unidade], html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group <%= error_class_for f.object, :nome %>">
    <%= f.label :nome, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :nome, maxlength: 255 %>
      <%= error_info_for f.object, :nome %>
    </div>
  </div>

  <div class="control-group <%= error_class_for f.object, :slug %>">
    <%= f.label :slug, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :slug, maxlength: 50 %>
      <%= error_info_for f.object, :slug %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Salvar', class: 'btn btn-primary', data: { disable_with: 'Salvando...' } %>
    <%= link_to 'Cancelar', [:entidade, :administracao, :unidades], class: 'btn' %>
  </div>

<% end %>
