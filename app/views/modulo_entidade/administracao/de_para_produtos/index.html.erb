<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Unidade</th>
      <th>Cód Prod Base</th>
      <th>Prod Base</th>
      <th>Cód Prod Unid</th>
      <th>Prod Unid</th>
    </tr>
  </thead>
  <tbody>
    <% if @de_para_produtos.any? %>
      <% @de_para_produtos.each do |de_para_produto| %>
        <tr>
          <td><%= de_para_produto.unidade.nome %></td>
          <td><%= de_para_produto.produto_entidade.codigo %></td>
          <td><%= de_para_produto.produto_entidade.descricao %></td>
          <td><%= de_para_produto.produto.codigo_sistema_legado %></td>
          <td><%= de_para_produto.produto.nome %></td>
          <td>
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                Ações<span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to [:entidade, :administracao, de_para_produto], method: :delete, data: { confirm: 'Deseja realmente excluir este registro?' } do %>
                    <i class='icon-repeat'></i> Excluir
                  <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">Nenhum dado para exibir.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @de_para_produtos %>
