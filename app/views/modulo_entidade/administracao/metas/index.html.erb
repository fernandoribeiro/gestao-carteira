<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Data Inicial</th>
      <th>Data Final</th>
      <th>Dias Utéis</th>
      <th>Meta de Venda</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @metas.any? %>
      <% @metas.each do |meta| %>
        <tr>
          <td><%= raw meta.data_inicio %></td>
          <td><%= meta.data_final %></td>
          <td><%= meta.dias_uteis %></td>
          <td><%= meta.valor_de_faturamento %></td>
          <td>
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                Ações<span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to [:entidade, :administracao, meta] do %>
                    <i class='icon-eye-open'></i> Detalhes
                  <% end %>
                </li>
                <li>
                  <%= link_to [:edit, :entidade, :administracao, meta] do %>
                    <i class='icon-edit'></i> Editar
                  <% end %>
                </li>
                <li>
                  <%= link_to [:entidade, :administracao, meta], method: :delete, data: { confirm: 'Deseja realmente excluir este registro?' } do %>
                    <i class='icon-repeat'></i> Excluir
                  <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">Nenhum registro encontrado.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @metas %>

<div class="form-actions">
  <%= link_to [:new, :entidade, :administracao, :meta], class: 'btn btn-primary' do %>
    <i class="icon-file icon-white"></i> Novo
  <% end %>
</div>
