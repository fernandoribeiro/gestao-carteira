<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Tipo Arquivo</th>
      <th>Nome</th>
      <th>Unidade</th>
      <th>Situação</th>
      <th>Arquivo</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if @importacoes.any? %>
      <% @importacoes.each do |importacao| %>
        <tr>
          <td><%= importacao.tipo_arquivo_verbose %></td>
          <td><%= importacao.nome %></td>
          <td><%= importacao.unidade.nome %></td>
          <td><%= importacao.situacao_verbose %></td>
          <td><%= importacao.arquivo_url %></td>
          <td>
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                Ações<span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to [:entidade,:administracao,importacao] do %>
                    <i class='icon-eye-open'></i> Detalhes
                  <% end %>
                </li>
                <li>
                  <%= link_to [:edit,:entidade,:administracao,importacao] do %>
                    <i class='icon-edit'></i> Editar
                  <% end %>
                </li>
                <li>
                  <%= link_to [:entidade,:administracao,importacao], method: :delete, data: { confirm: "Deseja realmente trocar a Situação este registro?" } do %>
                    <i class='icon-repeat'></i> Excluir
                  <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="6">Nenhum dado para exibir!</td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to [:new,:entidade,:administracao,:importacao], class: "btn btn-primary" do %>
    <i class='icon-file icon-white'></i> Novo
  <% end %>
</div>
