<!DOCTYPE html>
<html>
<head>
  <title>Gestão de Carteira</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  
  <%= csrf_meta_tags %>
</head>
<body>
  <% unless notice.blank? %>
    <%= render "notice", notice: notice %>
  <% end %>
  <div id="page_content" class="container">
    <div class="page-header">
      <h1><%= current_title %> <small><%= current_subtitle %></small></h1>
    </div>
    <%= yield %>
  </div>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "Gestão de Carteira", administracao_path, class: "brand" %>
        <% if user_authenticated? %>
          <ul class="nav" role="navigation">
            <li class="dropdown">
              <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown">Cadastros <b class="caret"></b></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                <li><%= link_to 'Entidades', [:administracao, :entidades] %></li>
                <li class="divider"></li>
                <li><%= link_to 'Usuários', [:administracao, :usuario_administradores] %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> Conta <b class="caret"></b></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                <li><a href="<%= administracao_sign_out_path %>"><i class="icon-off"></i> Sair</a></li>
              </ul>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div id="notice_over"></div>
</body>
</html>
